<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <link rel='stylesheet' href='/stylesheets/style.css' />

</head>
<nav>
  <div class="container mx-auto px-6 py-2 flex justify-between items-center">
    <a class="font-bold text-2xl lg:text-4xl" href="#">
      Members Only!
    </a>
    <div class="block sm:hidden">
      <button class="flex items-center px-3 py-2 border rounded text-gray-500 border-gray-600 hover:text-gray-800 hover:border-teal-500 appearance-none focus:outline-none">
        <svg class="fill-current h-3 w-3" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
          <title>Menu</title>
          <path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z" />
        </svg>
      </button>
    </div>
    <div class="hidden sm:block">
      <ul class="inline-flex">
        <li><a class="px-4 font-bold" href="/">Home</a></li>
        <% if (currentUser) { %>
          <li><a class="px-4 hover:text-blue-800" href="/log-out">Log Out</a></li>
          <% } else { %>
            <li><a class="px-4 hover:text-blue-800" href="/log-in">Log In</a></li>
            <% } %>
        <li><a class="px-4 hover:text-blue-800" href="/sign-up">Sign Up</a></li>
      </ul>
    </div>
  </div>
</nav>
<body>
  <% if (typeof currentUser !== "undefined" && currentUser.isAdmin) { %>
    <a href="/admin/dashboard">Admin Dashboard</a>
  <% } %>
  <h1 class="text-red-500">Welcome to members only</h1>

  <% if (currentUser) {%>
    <h1>WELCOME BACK <%= currentUser.username %></h1>
      <% if (!currentUser.isMember) { %>
    <p>You need a membership to be able to create a new message</p>
    <a href="/member">Become a member</a>
        <% } else { %>
          <p>You are a member.</p>
          <a href="/admin">Admin?</a>
          <form action="" method="POST">
            <label for="title">Title:</label>
            <input name="title" placeholder="Add a title" type="text" required />
            <label for="comment">Message:</label>
            <textarea name="comment" placeholder="Add a comment" rows="5" required></textarea>
            <button>Send</button>
          </form>
          <% } %>
  <% } else { %>
    <a href="/log-in">Log in</a>
    <a href="/sign-up">Sign Up</a>
  <% } %>
  <% if (typeof allMessages !== "undefined") { %>
    <ul>
      <% allMessages.forEach(function(message) { %>
        <li>
          <% if (currentUser && currentUser.isMember) { %>
          <strong><%= message.user.username %> says:</strong>
          <% } else { %>
          <strong>Anonymous says:</strong>
          <% } %>
          <%= message.title %>
          <%= message.comment %>
        </li>
        <% }); %>
    </ul>
    <% } %>
    <% if (typeof errors !== "undefined") { %>
      <ul>
        <% errors.forEach(function(error) { %>
          <li><%= error.msg %></li>
        <% }); %>
      </ul>
    <% } %>
    <button class="btn btn-blue">
      Button
    </button>
    
    <button class="btn btn-blue">
      Sign up
    </button>
    
</body>
</html>